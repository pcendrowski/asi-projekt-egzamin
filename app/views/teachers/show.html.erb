<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @teacher.name %>
</p>

<p>
  <strong>Surname:</strong>
  <%= @teacher.surname %>
</p>

<h2>Przedmioty:</h2>
<table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Kod</th>
      <% if user_signed_in? %>
      <th colspan="3"></th>
      <% else  %>
      <th colspan="2"></th>
  <% end %>
    </tr>
  </thead>
  
  <tbody>
    
    <%= render @teacher.lessons %>
  
  </tbody>
</table>

<% if user_signed_in? %>
<h2>Dodaj przedmiot:</h2>
<%= render 'lessons/form' %>
<% else  %>
  <% end %>

<%= link_to 'Edit', edit_teacher_path(@teacher) %> |
