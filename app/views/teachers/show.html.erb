  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Kod</th>
      <% if user_signed_in? %>
      <th colspan="3"></th>
      <% else  %>
      <th colspan="2"></th>
  <% end %>
    </tr>
  </thead>
  
  <tbody>
    
    <%= render @teacher.lessons %>
  
  </tbody>
</table>

<% if user_signed_in? %>

<%= render 'lessons/form' %>
<% else  %>
  <% end %>
<div style="padding-left:50px;padding-top:20px; ">
