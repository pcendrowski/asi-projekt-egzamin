<h1 style="text-align: center">Lista wykładowców</h1>



<div style="padding-left:50px; padding-right:50px">



 <% if user_signed_in? %>
 <%= will_paginate @teachers %>
<table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.surname %></td>
        <td style="width:10%"><center><span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>&ensp;<%= link_to 'Pokaż przedmioty', teacher %></center></td>
        <td style="width:10%"><center><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&ensp;<%= link_to 'Edytuj', edit_teacher_path(teacher) %></center></td>
        <td style="width:10%"><center><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&ensp;<%= link_to 'Usuń', teacher, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @teachers %>
<% else  %>
<%= will_paginate @teachers %>
<table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.surname %></td>
        <td><span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>&ensp;<%= link_to 'Pokaż przedmioty', teacher %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @teachers %>
<% end %>

<br>


<%= link_to 'Dodaj wykładowcę', new_teacher_path,class: 'btn btn-primary'%>
</div>